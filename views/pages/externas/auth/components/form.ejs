
   <form
    action="/users/auth"
    method="POST"
    class="containerLogin"
    >
    <h1 class="containerLogin__title">OlÃ¡,</h1>
    <p class="containerLogin__description">
    insira seu email e senha para acessar sua conta
    </p>

    <input
    class="containerLogin__field"
    placeholder="E-mail"
    value="<%= content.email?content.email:'' %>"
    onfocus="this.placeholder=''"
    onblur="this.placeholder='E-mail'"
    type="email"
    name="email"
    />
    <span class="containerLogin__field__error"></span>
    <input
    class="containerLogin__field"
    placeholder="Senha"
    onfocus="this.placeholder=''"
    onblur="this.placeholder='Senha'"
    type="password"
    name="senha"
    />
    <span class="containerLogin__field__error">
        <%= error.email ? error.email : '' %>
    </span>


    <a>
        <button class="btn" type="submit">Entrar</button>
    </a>
    </form>