<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/pages/internas/dados/index.css">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dados | DetoxFin</title>
</head>
<body>
    

        <%- include("../../components/headerInterno.ejs",{
            usuario
        })%>
    <main class="mainContainer">
        <%- include  ../../components/menuLateral.ejs %>

        <section class="container m-auto">
           <form action="/user/dadosDaConta/editarDados/<%= usuario.idUsuario %>" class="box" method="post"  >
            <div class="field">
                <label class="field-label" for="nome">Nome</label>
                <div class="control">
                  <input
                    class="input"
                    type="text"
                    name="nome"
                    autocomplete="off"
                    value="<%= usuario.nome%>"
                    required
                  />
                </div>
              </div>
              <div class="field">
                <label class="field-label" for="nome">Email:</label>
                <div class="control">
                  <input
                    class="input"
                    type="text"
                    name="email"
                    autocomplete="off"
                    value="<%= usuario.email%>"
                    readonly
                    required
                  />
                </div>
              </div>
              <div class="field">
                <label class="field-label" for="nome">CPF:</label>
                <div class="control">
                  <input
                    class="input"
                    type="number"
                    name="cpf"
                    autocomplete="off"
                    value="<%= usuario.cpf%>"
                    readonly
                    required
                  />
                </div>
              </div>
              <div class="field">
                <label class="field-label" for="nome">Telefone:</label>
                <div class="control">
                  <input
                    class="input"
                    type="number"
                    name="telefone"
                    autocomplete="off"
                    value="<%= usuario.telefone%>"
                    required
                  />
                </div>
              </div>
              
               <div class=" offset-md-4 pb-5">
               
                <a href="/user/dadosDaConta">
                    <input class="button is-danger" type="button" value="Cancelar"/>
                </a>
                <input class="button is-link form_padding" type="submit" value="Alterar"/>
               </div>
               
           </form>
          
     
        </section>




    </main>
</body>
</html>