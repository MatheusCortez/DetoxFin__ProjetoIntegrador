<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <link rel="stylesheet" href="/css/partials/meusInvestimentos/listInvestment.css">
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">  
        <meta charset="UTF-8">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>DetoxFin | Investimentos</title>
    </head>
    <body>
        <%- include("../../../partials/headerinterno.ejs",{
            usuario
        })%>
        <main class="mainContainer">
            <%- include  ../../../partials/menuLateral.ejs %>
            
            <section class="mainContainer__cardPrincipal">
                    
                <%-include headerInvestimentos.ejs %>
            
            <div class="search-container row">
                    <input type="search" class="search-container__input offset-md-2 col-md-6" placeholder="Buscar..." aria-label="Search"
                      aria-describedby="search-addon"/>
                <span class="col-md-2" id="search-addon">
                <i class="fas fa-search"></i>
                </span>
            </div>

               <% for (const investimento of investimentos) { %>
                    <li class="box">
                        <p class="box_title"><%= investimento.nome %></p> 
                        <ul class="descricao">
                            <li class="descricao_link">Valor: R$<%= investimento.valor %></li>
                            <li class="descricao_link">Renda <%= investimento.renda %></li>
                            <li class="descricao_link"><%= investimento.tipo %></li>
                            <li class="descricao_link_borda"><%= investimento.tempo %></li>
                        </ul>
                        <form method="POST" action="/user/meusInvestimentos/deletar/<%= investimento.id %>">
                            <input class="button is-danger" type="submit" value="Deletar"/>
                        </form>
                    </li>
                <% } %>
            </section>
        </main>
 
      
           
    </body>
</html>